<p style="color: green"><%= notice %></p>

<div class="grid grid-cols-5">

<table id="surveys" class="col-span-full table-auto min-w-full min-h-3/5">
  <thead>
    <tr>
      <th>Title</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  <% @surveys.each do |survey| %>

    <%= render survey %>
    <p>
      <%= link_to "Show this survey", survey %>
    </p>
  <% end %>
</table>

<%= link_to "New survey", new_survey_path, class: "text-white bg-green-600 hover:bg-green-800 rounded-lg p-2 text-sm my-2 col-start-5 mx-auto" %>

</div>
