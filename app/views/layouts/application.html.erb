      <div class="container mx-auto px-5">
        <nav class="flex items-center justify-between py-5 h-20">
          <a href="/" class="text-2xl font-bold">SurveyApp</a>
        </nav>
      </div>
    </header>
    <main class="container mx-auto px-5 h-auto">
      <%= yield %>
    </main>
